[init]
  defaultBranch = master
[core]
  excludesfile = ~/.gitignore
  autocrlf = input
  editor = vim
  ignorecase = false
[push]
  default = simple
[color]
  status = auto
  diff = auto
  branch = auto
  interactive = auto
  grep = auto
  ui = auto
[fetch]
  recursesubmodules = yes
  parallel = 0
[status]
  submoduleSummary = true
[gpg]
  format = ssh
[gpg "ssh"]
  program = "/Applications/1Password.app/Contents/MacOS/op-ssh-sign"
[commit]
  gpgsign = true
[includeIf "hasconfig:remote.*.url:**/github.com*/**"]
    path = config.github
